{
    "view": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [
            {
                "id": "Sender",
                "type": "TextBlock",
                "text": "Sender: ${creator[0].displayName}",
                "size": "small",
                "wrap": true
            },
            {
                "type": "Container",
                "items": [
                    {
                        "type": "ColumnSet",
                        "columns": [
                            {
                                "type": "Column",
                                "width": "stretch",
                                "items": [
                                    {
                                        "id": "Expiry",
                                        "type": "TextBlock",
                                        "text": "${if(equals(action.status, 'Active'), 'Attendance Active','Attendance Expired')}",
                                        "color": "${if(equals(action.status, 'Active'), 'default','attention')}",
                                        "size": "small",
                                        "wrap": true
                                    },
                                    {
                                        "id": "Title",
                                        "type": "TextBlock",
                                        "text": "${action.displayName}",
                                        "size": "large",
                                        "maxLines": 3,
                                        "wrap": true,
                                        "weight": "bolder",
                                        "spacing": "small"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "type": "Container",
                "style": "emphasis",
                "items": [
                    {
                        "type": "ColumnSet",
                        "columns": [
                            {
                                "type": "Column",
                                "width": "stretch",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "text": "Till: ${action.dataTables[0].dataColumns[0].options[0].displayName}, ${action.dataTables[0].dataColumns[0].options[1].displayName}",
                                        "size": "medium",
                                        "wrap": true,
                                        "spacing": "medium"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "ColumnSet",
                        "columns": [
                            {
                                "type": "Column",
                                "width": "auto",
                                "items": [
                                    
                                ]
                            },
                            {
                                "type": "Column",
                                "width": "auto",
                                "items": [
                                    
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "type": "ColumnSet",
                "columns": [
                    {
                        "type": "Column",
                        "width": "stretch",
                        "items": [
                            {
                                "id": "Summary",
                                "type": "TextBlock",
                                "text": "${if(summary.rowCreatorCount > 0, summary.rowCreatorCount + ' Responded', 'Be the first one to respond')}",
                                "size": "small",
                                "weight": "bolder",
                                "maxLines": 2,
                                "wrap": true,
                                "spacing": "small"
                            }
                        ]
                    }
                ]
            }
        ],
        "actions": [
            /* {
                "id": "RespondButton",
                "$when": "${equals(action.status, 'Active')}",
                "title": "Respond",
                "command": "LaunchActionPackageView",
                "parameters": {
                    "viewName": "UpdateView"
                }
            }, */
            {
                "id": "ResultButton",
                "title": "View Result",
                "command": "LaunchActionPackageView",
                "parameters": {
                    "viewName": "DetailView"
                }
            }
        ]
    },
    "data": {
        "action": {
            "command": "GetAction"
        },
        "summary": {
            "command": "GetActionDataRowsSummary",
            "parameters": {
                "addDefaultAggregates": true
            }
        },
        "creator": {
            "command": "GetSubscriptionMembers",
            "parameters": {
                "memberIds": [
                    "$ActionCreator"
                ]
            }
        }
    }
}
